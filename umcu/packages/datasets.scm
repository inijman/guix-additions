              (uri (string-append
                    "ftp://dbnsfp:dbnsfp@dbnsfp.softgenetics.com/dbNSFPv"
                    version ".zip"))
              (sha256
               (base32
                "1bs2jpz8d2a9nkc72hhwynzavylr1srsbdrfmmcqpb4pgzqyzk24"))))
    (build-system trivial-build-system)
    (arguments
